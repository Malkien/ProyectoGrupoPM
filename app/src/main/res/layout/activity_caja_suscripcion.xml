<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTituloSuscripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewPrecioSuscripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewDescripcionSuscripcion"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/buttonSuscribirse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/forma_boton"
            android:text="@string/botonSuscribirseCreador" />
    </LinearLayout>

</androidx.cardview.widget.CardView>