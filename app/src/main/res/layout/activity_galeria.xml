<?xml version="1.0" encoding="utf-8"?>
<!--Contenedor donde se introducen todos los elementos del Activity Galeria-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    tools:context=".Galeria">

    <!--Contenedor con Scroll donde se introducen todos los elementos menos el menu inferior-->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--LinearLayout contenedor de todos los elementos dentro del ScrollView-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--TextView con el nombre del artista-->
            <TextView
                android:id="@+id/nombreArtista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorCabecera"
                android:padding="10dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/negro"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!--LinearLayout contenedor del boton filtrar y la caja de busqueda-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!--Boton para filtrar-->
                <Button
                    android:id="@+id/botonFiltrar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/forma_boton"
                    android:text="@string/botonFiltar" />

                <!--Barra de busqueda-->
                <SearchView
                    android:id="@+id/cajaBusqueda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/caja_texto" />

            </LinearLayout>

            <!--LinearLayout horizontal que almacena diferentes layouts para guardar las imagenes-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--LinearLayout vertical que almacena el titulo, imagen y categoria-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--TextView con el titulo del Dibujo-->
                    <TextView
                        android:id="@+id/tituloGaleriaDibujo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="@color/negro"
                        android:textSize="24sp" />

                    <!--ImageView con la imagen a mostrar-->
                    <ImageView
                        android:id="@+id/dibujoGaleria1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true" />

                    <!--TextView con la categoria del Dibujo-->
                    <TextView
                        android:id="@+id/categoriaGaleriaDibujo1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textAlignment="textEnd"
                        android:textColor="@color/negro" />

                </LinearLayout>

                <!--LinearLayout vertical que almacena el titulo, imagen y categoria-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--TextView con el titulo del Dibujo-->
                    <TextView
                        android:id="@+id/tituloGaleriaDibujo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="@color/negro"
                        android:textSize="24sp" />

                    <!--ImageView con la imagen a mostrar-->
                    <ImageView
                        android:id="@+id/dibujoGaleria2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true" />

                    <!--TextView con la categoria del Dibujo-->
                    <TextView
                        android:id="@+id/categoriaGaleriaDibujo2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textAlignment="textEnd"
                        android:textColor="@color/negro" />

                </LinearLayout>

            </LinearLayout>

            <!--LinearLayout horizontal que almacena diferentes layouts para guardar las imagenes-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--LinearLayout vertical que almacena el titulo, imagen y categoria-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--TextView con el titulo del Dibujo-->
                    <TextView
                        android:id="@+id/tituloGaleriaDibujo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="@color/negro"
                        android:textSize="24sp" />

                    <!--ImageView con la imagen a mostrar-->
                    <ImageView
                        android:id="@+id/dibujoGaleria3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true" />

                    <!--TextView con la categoria del Dibujo-->
                    <TextView
                        android:id="@+id/categoriaGaleriaDibujo3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textAlignment="textEnd"
                        android:textColor="@color/negro" />

                </LinearLayout>

                <!--LinearLayout vertical que almacena el titulo, imagen y categoria-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--TextView con el titulo del Dibujo-->
                    <TextView
                        android:id="@+id/tituloGaleriaDibujo4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textColor="@color/negro"
                        android:textSize="24sp" />

                    <!--ImageView con la imagen a mostrar-->
                    <ImageView
                        android:id="@+id/dibujoGaleria4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true" />

                    <!--TextView con la categoria del Dibujo-->
                    <TextView
                        android:id="@+id/categoriaGaleriaDibujo4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textAlignment="textEnd"
                        android:textColor="@color/negro" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!--Espacio reservado para el menu con botones-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/colorBordes"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>