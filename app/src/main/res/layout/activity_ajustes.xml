<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ajustes">

    <LinearLayout
        android:id="@+id/barradenavegacion"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/colorBordes"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textoidioma"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Idioma"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/eligeidioma"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/caja_texto" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:id="@+id/textofuente"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="Cambiar fuente"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/eligefuente"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/caja_texto" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <TextView
            android:id="@+id/textotamano"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="TamaÃ±o fuente" />

        <Spinner
            android:id="@+id/eligetamano"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/caja_texto" />
    </LinearLayout>

    <TextView
        android:id="@+id/tituloajustes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajustes"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>