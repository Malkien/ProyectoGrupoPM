<?xml version="1.0" encoding="utf-8"?>
<!--Contenedor donde se introducen todos los elementos del Activity Estadisticas-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    tools:context=".Estadisticas">

    <!--Contenedor donde se guarda el TextView de la cabecera junto su color de fondo-->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--TextView para mostar el nombre del Artista-->
        <TextView
            android:id="@+id/cabeceraEstadisticas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorCabecera"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:text="@string/cabeceraEstadisticas" />
    </LinearLayout>

    <!--Contenedor de todos los datos referentes a dinero y suscritos-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
        <!--TextView de la etiqueta DineroGanado-->
        <TextView
            android:id="@+id/textoDineroEstadisticas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/caja_texto"
            android:gravity="center"
            android:text="@string/textoDineroGanado"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="26sp"
            android:textStyle="bold" />
        <!--TextView donde muestra el dinero-->
        <TextView
            android:id="@+id/dineroEstadisticas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="26sp" />
        <!--TextView de la etiqueta NumeroUsuarios-->
        <TextView
            android:id="@+id/textoUsuariosEstadisticas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/caja_texto"
            android:gravity="center"
            android:text="@string/textoNumeroUsuarios"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="26sp"
            android:textStyle="bold" />
        <!--TextView donde muestra el numero de usuarios suscritos-->
        <TextView
            android:id="@+id/usuariosEstadisticas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="26sp" />
    </LinearLayout>

    <!--Espacio reservado para el menu con botones-->

</androidx.constraintlayout.widget.ConstraintLayout>